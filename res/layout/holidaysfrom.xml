<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/beginDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="date"
        android:text="@string/beginDate" />

    <TextView
        android:id="@+id/startHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/beginDate"
        android:layout_toLeftOf="@+id/beginDate"
        android:text="@string/startDateMessage"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/findHolidaysFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beginDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="@string/holidaysFrom" />

    <TextView
        android:id="@+id/holidaysfromMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="@string/holidayfromMessage"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>